{
  "manifest_version": 3,
  "name": "Voik Meet Transcriber",
  "version": "1.0.0",
  "description": "Capture Google Meet audio and transcribe via Voik",
  "author": "Voik",

  "permissions": [
    "tabCapture",
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],

  "host_permissions": [
    "https://meet.google.com/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Voik Meet Transcriber"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost/*",
        "http://localhost:5173/*",
        "http://127.0.0.1/*",
        "https://voik.app/*",
        "https://voik.netlify.app/*"
      ],
      "js": ["voik-bridge.js"],
      "run_at": "document_start"
    }
  ]
}
